<div id="contact">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="riplo-bar red"></div>

        <div class="content marg-bot-1">
          <h2 class="serif bold marg-bot-1">Contact us</h2>
          <form id="contact-form">
            <div id="contact-page-message"></div>
            <div class="row">
              <div class="col-12 col-md-6">
                <input type="text" name="firstName" id="firstName" class="form-control" placeholder="First" required="true"></input>
              </div>
              <div class="col-12 col-md-6">
                <input type="text" name="lastName" class="form-control" placeholder="Last" required="true"></input>
              </div>
            </div>
            <input type="email" name="email" class="form-control" placeholder="example@gmail.com" required="true"></input>
            <input type="text" name="subject" class="form-control" placeholder="Subject..." required="true"></input>
            <textarea type="text" name="body" class="form-control marg-bot-1" rows="5" placeholder="Message..." required="true"></textarea>
            <input type="submit" name="submit" value="Send" class="btn btn-primary" id="submit-button"></input>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
